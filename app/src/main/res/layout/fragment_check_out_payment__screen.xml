<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_3"
    android:orientation="vertical"
    tools:context=".CheckOut_Payment_Screen">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50sp"
        android:text="Payment"
        android:textColor="@color/light_blue"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_method_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Payment Method"
            android:textColor="@color/light_blue"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:outlineProvider="none"
            app:cardCornerRadius="7dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/card_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pink"
                    android:drawableStart="@drawable/credit_card"
                    android:drawablePadding="10dp"
                    android:text="Card"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/cash_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pink"
                    android:drawableStart="@drawable/money"
                    android:drawablePadding="10dp"
                    android:text="Cash"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp" />

            </RadioGroup>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delivery_method_txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delivery Method"
            android:textColor="@color/light_blue"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:outlineProvider="none"
            app:cardCornerRadius="7dp">

            <RadioGroup
                android:id="@+id/rg_delivery_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/door_radio_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pink"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:text="Door delivery"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/pickUp_radio_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/pink"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:text="Pick Up"
                    android:textColor="@color/light_blue"
                    android:textSize="16sp" />

            </RadioGroup>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/pink"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/jd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="JD"
            android:textColor="@color/light_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/jd"
            android:text="200"
            android:textColor="@color/light_blue"
            android:textSize="16sp" />

        <Button
            android:id="@+id/payment_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/pink"
            android:text="Proceed to payment"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>